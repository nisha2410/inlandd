<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="15dp"
        android:background="@drawable/layout_design">

        <EditText
            android:id="@+id/frst_editTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText1"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/textView6"
            android:background="#AA448AD7"
            android:ems="10"
            android:padding="10dp"
            android:textColor="#FFFFFF">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/dr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/frst_editTxt"
            android:layout_alignBottom="@+id/frst_editTxt"
            android:layout_alignLeft="@+id/textView3"
            android:padding="5dp"
            android:text="Dr. Name"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText2"
            android:layout_alignBottom="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:text="Height"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText2"
            android:layout_below="@+id/editText2"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="#AA448AD7"
            android:ems="10"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText1"
            android:layout_alignBottom="@+id/editText1"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:text="Weight"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/last_editTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frst_editTxt"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textView6"
            android:background="#AA448AD7"
            android:ems="10"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editText3"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@+id/textView6"
            android:background="#AA448AD7"
            android:ems="10"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/last_editTxt"
            android:layout_marginTop="14dp"
            android:text="VisitedDate:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText3"
            android:layout_alignBottom="@+id/editText3"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:text="DETAILS"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/spinner2"
            android:layout_marginRight="50dp"
            android:background="#AA448AD7"
            android:padding="10dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:background="#AA448AD7"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="26dp"
            android:text="VisitedFor"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/last_editTxt"
            android:layout_alignBottom="@+id/last_editTxt"
            android:layout_alignParentLeft="true"
            android:text="DOCFEES"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/spinner2"
            android:layout_alignParentBottom="true"
            android:background="#AA448AD7"
            android:padding="10dp" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/save_btn"
            android:background="#AA448AD7"
            android:ems="10"
            android:padding="10dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/spinner3"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/textView5"
            android:background="#AA000000"
            android:text="SAVE DETAILS"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>